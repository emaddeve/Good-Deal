<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.unicaen.GoodDealsws.model">

    <class name="Offers" table="offers">
        <id name="id" column="id">
            <generator class="increment"/>
       </id>
        <property name="name" column="name" type="string" />
        <property name="description" column="description" type="string" />
        <property name="category" column="category" type="string" />
        <property name="imageString" column="image" type="string" />
        <property name="longitude" column="longitude" type="double" />
         <property name="latitude" column="latitude" type="double" />
         <property name="magasin" column="magasin" type="string" />
         <property name="datefin" column="datefin" type="date" />
         <property name="userid" column="userid" type="int" />
      </class>
        
  

</hibernate-mapping>
