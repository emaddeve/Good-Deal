<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.emad.gooddeals.settings.SeekBarPreference
        android:defaultValue="50"
        android:dialogMessage="@string/settings_dialog_message"
        android:key="SEEKBAR_VALUE"
        android:max="100"
        android:summary="@string/settings_summary"
        android:text="@string/settings_unit"
        android:title="@string/settings_title" />
    <SwitchPreference
        android:key="offre_ami"
        android:title="Display Offers to my friends"
        android:summary="Enable display of offers to my friends on facebook"
        android:defaultValue="false" />
    <ListPreference
        android:title="Categories deals"
        android:summary="Select the category for which you want to post offers"
        android:key="categorytype"
        android:dialogTitle="@string/list_dialog_title"
        android:defaultValue="@string/update_default"
        android:entries="@array/options_names"
        android:entryValues="@array/options_values" />
</PreferenceScreen>